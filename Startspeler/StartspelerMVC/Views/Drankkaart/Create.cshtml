@model StartspelerMVC.Viewmodels.CreateDrankkaartViewModel

@{
    ViewData["Title"] = "Create";
}


<h4>Nieuwe drankkaart nodig?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Selecteer een aantal stempels</label>
                <select asp-for="Drankkaart.DrankkaartTypeID" class ="form-control" asp-items="Model.DrankkaartType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Koop!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar het overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
