@model StartspelerMVC.Viewmodels.CreateDrankkaartViewModel

@{
    ViewData["Title"] = "Create";
}


<h4>Selecteer je drankkaart:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Drankkaart.DrankkaartTypeID" class="control-label"></label>
                <select asp-for="Drankkaart.DrankkaartTypeID" class ="form-control" asp-items="Model.DrankkaartType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
