@using Microsoft.AspNetCore.Identity
@using StartspelerMVC.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (this.User.IsInRole("Admin")) { 
            <li class="nav-item">
                <a class="nav-link navbar-text-white" asp-area="Admin" asp-controller="Home" asp-action="Index">Beheer</a>
            </li>
        }
        <li class="nav-item">
            <a id="manage" class="nav-link navbar-text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hallo @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link navbar-text-white">Afmelden</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link navbar-text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Registreer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link navbar-text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Aanmelden</a>
        </li>
    }
</ul>