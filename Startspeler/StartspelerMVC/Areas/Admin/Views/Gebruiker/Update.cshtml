@model User

<h1>Gebruiker aanmaken</h1>

<div class="row">
    <div class="col-md-4">
        <form action="Update" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="@Model.Id" class="form-control" readonly />
            <div class="form-group">
                <label asp-for="@Model.UserName"></label>
                <input asp-for="@Model.UserName" class="form-control" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Achternaam"></label>
                <input asp-for="@Model.Achternaam" class="form-control" />
                <span asp-validation-for="@Model.Achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Voornaam"></label>
                <input asp-for="@Model.Voornaam" class="form-control" />
                <span asp-validation-for="@Model.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Geboortedatum"></label>
                <input asp-for="@Model.Geboortedatum" class="form-control" readonly />
                <span asp-validation-for="@Model.Geboortedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Wijzig</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
