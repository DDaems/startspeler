@model IEnumerable<IdentityRole>

<h1 class="bg-info text-white" style="background-color:#0088cc">Alle rollen</h1>
<a asp-action="Create" class="btn btn-secondary">Voeg een rol toe</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Rol</th><th>Leden</th><th>Wijzig</th><th>Verwijder</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Wijzig</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Verwijder
                    </button>
                </form>
            </td>
        </tr>
    }
</table>